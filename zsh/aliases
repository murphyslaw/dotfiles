#
# Alias
#
alias gitx='gitx --all'
alias ls='ls -lapkh'
alias ..='cd ..'
alias killssh='ps -ef | grep ssh | grep -v grep && killall ssh'
alias diff='diff -bB'
alias mkdir='mkdir -pv'
alias stree='open -a SourceTree'

#
# Rails alias
#
alias rs='rails server'
alias rc='rails console'
alias rg='rails generate'
alias tlog='tail -f log/development'

#
# Bundler alias
#
alias b='bundle exec $1'
